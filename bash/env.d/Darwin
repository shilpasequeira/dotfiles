#!/usr/bin/env bash

# -- Path settings ---------------------------------------------------------

# Java
[[ -d /Library/Java/Home ]] && \
  JAVA_HOME=/Library/Java/Home

# TeX
[[ -d /usr/texbin ]] && \
  __setup_path /usr/texbin

# X11
[[ -d /usr/X11/bin ]] && \
  __setup_path /usr/X11/bin

# Groovy
if [[ -d /Library/Groovy/current ]]; then
  GROOVY_HOME=/Library/Groovy/current
  __setup_path $GROOVY_HOME/bin
fi

# Scala
if [[ -d /Library/Scala/current ]]; then
  SCALA_HOME=/Library/Scala/current
  __setup_path $SCALA_HOME/bin
fi

# Node.js
[[ -d /opt/node.js/current/bin ]] && \
  __setup_path /opt/node.js/current/bin


# -- Editor settings -------------------------------------------------------

# Textmate
if [[ -d /Applications/TextMate.app ]]; then
  EDITOR="mate -w"
else
  EDITOR="vim"
fi

unset __setup_path

# -- Export environment variables ------------------------------------------

export CPP_INCLUDE_PATH
export C_INCLUDE_PATH
export EDITOR

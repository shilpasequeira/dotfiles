#!/usr/bin/env bash

# -- Path settings ---------------------------------------------------------

# Java
[[ -d /Library/Java/Home ]] && \
  export JAVA_HOME=/Library/Java/Home

# TeX
[[ -d /usr/texbin ]] && \
  __setup_path /usr/texbin

# X11
[[ -d /usr/X11/bin ]] && \
  __setup_path /usr/X11/bin

# Groovy
if [[ -d /Library/Groovy/current ]]; then
  export GROOVY_HOME=/Library/Groovy/current
  __setup_path $GROOVY_HOME/bin
fi

# Scala
if [[ -d /Library/Scala/current ]]; then
  export SCALA_HOME=/Library/Scala/current
  __setup_path $SCALA_HOME/bin
fi

# Node.js
[[ -d /usr/local/lib/node_modules ]] && \
  export NODE_PATH=/usr/local/lib/node_modules


# -- Editor settings -------------------------------------------------------

# Textmate
if [[ -d /Applications/TextMate.app ]]; then
  EDITOR="mate -w"
else
  EDITOR="vim"
fi; export EDITOR
